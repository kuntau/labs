/* swatches */
flat_dark_green = #16A085
flat_light_green = #4FD8BF
flat_vine_green = #39DBAC
flat_dark_grey = #303847
flat_light_purple = #BC66A1
flat_light_orange = #FB8261
flat_light_blue = #428BCA
flat_dark_mono = lighten(black, 60%)
flat_light_mono = lighten(black, 90%)

h1, h2, h3, h4, h4 a
  font-family 'Source Sans Pro', sans-serif
  font-weight 600

h1, h2, h3
  color flat_vine_green
  text-transform uppercase
  // text-shadow 2px 2px 0 darken(flat_vine_green, 30%)

h4, h4 a
  color lighten(black, 30%)

body
  font-family 'Open Sans', sans-serif
  font-weight 200
  background-color white
  color flat_dark_grey

// .navbar-nav li a
